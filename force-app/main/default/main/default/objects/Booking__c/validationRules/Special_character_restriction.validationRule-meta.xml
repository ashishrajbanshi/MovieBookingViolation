<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <fullName>Special_character_restriction</fullName>
    <active>true</active>
    <errorConditionFormula>NOT( REGEX( Name,&quot;[a-zA-Z]*&quot; ) )</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Special Characters and Numbers are not allowed.</errorMessage>
</ValidationRule>
