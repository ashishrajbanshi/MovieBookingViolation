<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <fullName>Price_can_not_be_zero_and_less</fullName>
    <active>true</active>
    <description>Price can not be zero or less than zero</description>
    <errorConditionFormula>Total_Price__c  &lt;= 0</errorConditionFormula>
    <errorDisplayField>Total_Price__c</errorDisplayField>
    <errorMessage>Please enter a valid amount</errorMessage>
</ValidationRule>
